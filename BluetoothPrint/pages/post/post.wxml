<import src="post-item/post-item-tpl.wxml"/>
<!--pages/post/post.wxml-->
<view>

  <swiper class='swiper-style' indicator-dots='true' autoplay='true' interval='3000' vertical='{{false}}'>

    <swiper-item class='swiper-item-styler'>
      <image class='swiper-item-image' mode='aspeactFill' src='/images/post/post-1@text.jpg'></image>
    </swiper-item>

    <swiper-item class='swiper-item-styler'>
      <image class='swiper-item-image' mode='scaleToFill' src='/images/post/post-2@text.jpg'></image>
    </swiper-item>

    <swiper-item class='swiper-item-styler'>
      <!-- 注意这里的样式的写法 -->
      <image style='width:100%; height:100%' mode='aspeactFill' src='/images/post/post-3@text.jpg'></image>
    </swiper-item>

  </swiper>

  <block wx:for="{{postList}}" wx:for-item="item1" wx:for-index="idx">
    <view catchtap='onTapToDetail' data-post-id='{{item1.postId}}'>
      <template is='simple' data="{{...item1}}"/>
    </view>
  </block>

</view>