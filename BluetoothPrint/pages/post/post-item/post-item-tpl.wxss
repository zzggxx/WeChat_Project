.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px
}

.post-author-date{
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  direction: row;
  align-items: center
}

.post-author-date text{
  margin-left: 20px;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx
}

.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 5px;
  margin-top: 5rpx;
  align-items: center;
}

.post-like image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
}

.post-like text{
  margin-right: 20px;
}